<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".home_fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:foregroundGravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgViewProfile"
            android:layout_width="50dp"
            android:layout_height="52dp"
            android:layout_gravity="right|center_vertical|end"
            android:foregroundGravity="center|right"
            android:scaleType="fitXY"
            android:src="@drawable/profile"
            app:shapeAppearanceOverlay="@style/circularShape"
            app:srcCompat="@drawable/profile"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonTutorial"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="#26C6DA"
        android:drawableTintMode="add"
        android:foregroundGravity="center"
        android:text="@string/main_tutorial_button"
        android:textAlignment="center"
        android:textColor="#F3F3F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597"
        android:elevation="10dp"
        android:translationZ="2dp"
        android:stateListAnimator="@null"/>


    <Button
        android:id="@+id/buttonPlay"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:backgroundTint="#42A5F5"
        android:drawableTintMode="add"
        android:foregroundGravity="center"
        android:text="@string/main_play_button"
        android:textAlignment="center"
        android:textColor="#F3F3F3"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52"
        android:elevation="10dp"
        android:translationZ="2dp"
        android:stateListAnimator="@null"/>


</androidx.constraintlayout.widget.ConstraintLayout>