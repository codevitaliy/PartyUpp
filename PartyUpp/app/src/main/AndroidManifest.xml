<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.PartyUpp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity android:name=".game.GameEndedActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".game.EndPhotoActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.PartyUpp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".login.RegistrationActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".login.LoginActivity"
            android:exported="true" />
        <activity
            android:screenOrientation="portrait"
            android:name=".game.GameActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".game.InitialPhotoActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".player_selection.PlayerSelectionAdapter"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".player_selection.PlayerSelectionActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.PartyUpp" />
        <activity
            android:screenOrientation="portrait"
            android:name=".gallery.GalleryGameDetailActivity"
            android:exported="true"
            android:label="Gallery Game Detail" />
        <activity
            android:screenOrientation="portrait"
            android:name=".tutorial.TutorialActivity"
            android:exported="true"
            android:label="Tutorial Activity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>